{% extends "base.jinja" %} 
{% block  content %}

<h1 class="header_title">{{ title }}</h1>


<div class="hero">
    <div class="hero__image">
    <img src="images/—Pngtree—book stack multiple books_8387142.png" alt="pile of books">
    </div>
</div>
<div class="container">
    <section class="input_details">
        <form action="/books" method="post">
            <label for="book_name">Title of book</label>
            <input type="text" name="title" id="title">
            <label for="book_author">Author of book</label>
            <input type="text" name="author" id="author">
            <label for="book_genre">Genre of book</label>
            <input type="text" name="genre" id="genre">
            <input type="submit" value="Add Book">
    </section>
        </form>
    <div class="book_list" >
        <ul>
        {% for book in book_list %}
            <li>
                <p>{{ book.title }} {{ book.author }} {{ book.genre }}</p>
                <form class="form-inline" action="/books/delete/{{ book.title }}" method="POST">
                <input type="submit" value="Delete">
                </form>
            </li>
        {% endfor %}
    </ul>
    </div>
</div>

{% endblock content %}